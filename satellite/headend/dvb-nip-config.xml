<?xml version="1.0" encoding="UTF-8"?>
<dvb-nip-config>
  <service>
    <id>streaming-platform-primary</id>
    <name>Streaming Platform Primary</name>
    <tsid>1001</tsid>
    <service-id>5001</service-id>
  </service>
  
  <transponder>
    <frequency>11727.5</frequency>
    <symbol-rate>27500</symbol-rate>
    <polarization>vertical</polarization>
    <fec>3/4</fec>
    <modulation>8PSK</modulation>
  </transponder>
  
  <nip-table>
    <table-id>0x38</table-id>
    <max-update-interval>3600</max-update-interval>
    
    <content-item>
      <id>video-001</id>
      <url>http://cdn.example.com/vod/channel-1/video1.mpd</url>
      <description>Popular Content A</description>
      <priority>high</priority>
      <size>524288000</size>
      <expiry>86400</expiry>
    </content-item>
    
    <content-item>
      <id>video-002</id>
      <url>http://cdn.example.com/vod/channel-2/video2.mpd</url>
      <description>Popular Content B</description>
      <priority>high</priority>
      <size>734003200</size>
      <expiry>86400</expiry>
    </content-item>
    
    <content-item>
      <id>epg-data</id>
      <url>http://cdn.example.com/epg/now.json</url>
      <description>Electronic Program Guide</description>
      <priority>medium</priority>
      <size>10485760</size>
      <expiry>3600</expiry>
    </content-item>
  </nip-table>
  
  <carousel-config>
    <cycle-time>3600</cycle-time>
    <max-items>1000</max-items>
    <compression>gzip</compression>
  </carousel-config>
  
  <mabr-config>
    <enabled>true</enabled>
    <bandwidth-prediction>lte-ready</bandwidth-prediction>
    <abr-algorithm>dash</abr-algorithm>
    <min-bitrate>500000</min-bitrate>
    <max-bitrate>15000000</max-bitrate>
  </mabr-config>
</dvb-nip-config>

