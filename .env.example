# StreamVerse Environment Variables
# Copy to .env and fill in your values

# ==================== Database Configuration ====================
POSTGRES_DB=streamverse
POSTGRES_USER=streamverse
POSTGRES_PASSWORD=your_secure_postgres_password_here

MONGO_USER=streamverse
MONGO_PASSWORD=your_secure_mongo_password_here

REDIS_PASSWORD=your_secure_redis_password_here

# ==================== API Keys ====================
GEMINI_API_KEY=your_gemini_api_key_here
JWT_SECRET=your_jwt_secret_min_32_characters_here

# Stripe (Payment Processing)
STRIPE_API_KEY=your_stripe_api_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# OAuth (Auth Service)
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
APPLE_OAUTH_CLIENT_ID=your_apple_oauth_client_id

# ==================== External Services ====================
CDN_BASE_URL=https://cdn.streamverse.io
DRM_LICENSE_URL=https://drm.streamverse.io
API_BASE_URL=https://api.streamverse.io
PAYMENT_SERVICE_URL=http://payment-service:8080

# Compliance / Geo restrictions
GEO_BLOCKED_COUNTRIES=KP,IR,SY

# ==================== Monitoring ====================
GRAFANA_PASSWORD=admin_change_me

# ==================== Application Settings ====================
ENVIRONMENT=production
LOG_LEVEL=info

# ==================== Email/SMS ====================
SENDGRID_API_KEY=your_sendgrid_api_key
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token

# ==================== Cloud Storage ====================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=streamverse-media
