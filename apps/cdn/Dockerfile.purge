FROM rust:1.75-slim as builder

WORKDIR /build

COPY apps/cdn/Cargo.toml ./
COPY apps/cdn/purge-sidecar.rs ./src/main.rs

RUN cargo build --release

FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*

COPY --from=builder /build/target/release/purge-sidecar /usr/local/bin/purge-sidecar

EXPOSE 8080

ENTRYPOINT ["/usr/local/bin/purge-sidecar"]

