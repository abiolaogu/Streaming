<?xml version="1.0" encoding="utf-8"?>
<component name="MainScene" extends="Scene">
    <script type="text/brightscript" uri="MainScene.brs"/>
    <children>
        <!-- Header -->
        <Label id="title" 
               text="StreamVerse" 
               font="font:LargeBoldSystemFont" 
               color="0xFFFFFF"
               translation="[50, 50]"
               width="400"/>
        
        <!-- Content Grid -->
        <RowList id="contentGrid"
                 translation="[50, 150]"
                 itemSize="[300, 450]"
                 itemSpacing="[20, 20]"
                 numRows="3"
                 drawFocusFeedback="true">
            <ContentNode id="rowListContent"/>
        </RowList>
        
        <!-- Loading Indicator -->
        <BusySpinner id="loadingSpinner"
                     translation="[640, 360]"
                     visible="false"/>
        
        <!-- Error Message -->
        <Label id="errorMessage"
               text=""
               color="0xFF0000"
               translation="[50, 800]"
               visible="false"
               width="1200"/>
    </children>
</component>

