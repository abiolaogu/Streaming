<?xml version="1.0" encoding="utf-8"?>
<component name="LoginView" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/LoginView.brs" />
    
    <interface>
        <field id="loginSuccess" type="boolean" />
    </interface>
    
    <children>
        <Label 
            id="titleLabel"
            text="StreamVerse"
            font="font:LargeBoldSystemFont"
            translation="[960, 200]"
            horizAlign="center"
        />
        
        <KeyboardDialog 
            id="emailKeyboard"
            title="Email Address"
            message="Enter your email"
            buttons=["OK", "Cancel"]
            translation="[460, 400]"
        />
        
        <KeyboardDialog 
            id="passwordKeyboard"
            title="Password"
            message="Enter your password"
            buttons=["Login", "Cancel"]
            isPasswordMode="true"
            translation="[460, 500]"
        />
    </children>
</component>

